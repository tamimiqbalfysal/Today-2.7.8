rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /usernames/{username} {
      allow get;
      allow create: if request.auth.uid == request.resource.data.uid;
    }

    match /users/{userId} {
      allow get: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        request.resource.data.followers.hasAny([request.auth.uid]) ||
        !request.resource.data.followers.hasAny([request.auth.uid])
      );
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    match /admins/{email} {
      allow get, list, create, delete: if isAdmin();
    }

    match /posts/{postId} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow update: if request.auth.uid == resource.data.authorId || request.auth.uid in resource.data.likes || request.auth.uid in resource.data.laughs;
      allow delete: if request.auth.uid == resource.data.authorId;

      match /reviews/{reviewId} {
        allow read;
        allow create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.authorId;
      }
      
      match /preorders/{preorderId} {
        allow read, list, create;
      }
    }
    
    match /finditItems/{itemId} {
      allow read, list;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    match /gigs/{gigId} {
      allow get, list;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.sellerId;
    }

    match /chats/{chatId} {
      allow get, list, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid in request.resource.data.participants;
      
      match /messages/{messageId} {
          allow read, create: if request.auth.uid in resource.data.participants;
      }
    }

    match /courseAdmin/{courseId} {
        allow read;
        allow update: if isAdmin();
    }
    
    match /think_free_class_registrations/{registrationId} {
        allow create;
        allow read, list: if isAdmin();
    }

    match /giftCodes/{codeId} {
      allow read, update: if request.auth != null;
      allow create: if isAdmin();
    }
    
    match /thinkCodes/{codeId} {
      allow read, update: if request.auth != null;
      allow create: if isAdmin();
    }

    match /bloodRequests/{requestId} {
      allow read, list;
      allow create: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.authorId;
    }

    match /users/{userId}/notifications/{notificationId} {
        allow read, list, update: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/giveawayHistory/{giveawayId} {
      allow read, list: if request.auth.uid == userId;
      allow create: if isAdmin();
    }
  }
}