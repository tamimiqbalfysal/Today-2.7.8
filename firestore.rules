
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuth() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }


    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read usernames for validation
    match /usernames/{username} {
      allow get;
    }
    
    match /admins/{adminId} {
        allow list, read: if isAdmin();
        allow create, delete: if isAdmin();
    }
    
    match /users/{userId} {
      allow get: if isAuth();
      allow create: if isOwner(userId);
      allow update: if isAuth() && (
        isOwner(userId) ||
        request.resource.data.followers.hasAny([request.auth.uid]) ||
        !request.resource.data.followers.hasAny([request.auth.uid])
      );
    }
    
    match /posts/{postId} {
      allow read;
      allow create: if isOwner(request.resource.data.authorId);
      allow update: if isAuth();
      allow delete: if isOwner(resource.data.authorId) || isAdmin();

      match /reviews/{reviewId} {
        allow read, list;
        allow create: if isAuth();
      }
      
      match /preorders/{preorderId} {
        allow read, list, create;
      }
    }
    
    match /finditItems/{itemId} {
      allow read, list;
      allow create: if isAuth();
      allow delete: if isOwner(resource.data.authorId);
    }

    match /gigs/{gigId} {
      allow get, list;
      allow create: if isOwner(request.resource.data.sellerId);
    }
    
    match /chats/{chatId} {
      allow get, list, create, update: if isAuth() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
          allow read, create: if isAuth() && request.auth.uid in resource.data.participants;
      }
    }

    match /courseAdmin/{courseId} {
        allow read;
        allow update: if isAdmin();
    }
    
    match /think_free_class_registrations/{registrationId} {
        allow create;
        allow read, list: if isAdmin();
    }

    match /giftCodes/{codeId} {
      allow read, update: if isAuth();
      allow create, delete: if isAdmin();
    }
    
    match /thinkCodes/{codeId} {
      allow read, update: if isAuth();
      allow create, delete: if isAdmin();
    }

    match /bloodRequests/{requestId} {
      allow read, list;
      allow create: if isAuth();
      allow delete: if isOwner(resource.data.authorId);
    }

    match /users/{userId}/notifications/{notificationId} {
        allow read, update: if isOwner(userId);
    }
     match /users/{userId}/giveawayHistory/{historyId} {
        allow read: if isOwner(userId);
    }
  }
}
